{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      ".bot/*": ["./.bot/*"]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}
